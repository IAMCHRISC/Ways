<Page x:Class="ways.NameChoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ways"
        mc:Ignorable="d"
        Title="Choix du nom de joueur">
    <Page.Background>
        <ImageBrush ImageSource="Resources/writing.jpg" Stretch="Fill"></ImageBrush>
    </Page.Background>
    
    <Grid>
        <Rectangle HorizontalAlignment="Center" VerticalAlignment="Center" Fill="White" Opacity="0.6" Height="400" Width="800"/>
        
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="300">
            <Label Content="Veuillez choisir un nom de joueur :" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,10" FontSize="20"/>
            <TextBox x:Name="textBox_Name" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="192" Margin="0,10,0,10"/>
            <Button Content="Valider" HorizontalAlignment="Center" VerticalAlignment="Center" Height="25" Width="192" Click="NavigateToQuestions" Margin="0,10,0,10"/>
            <Label Content="" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="validityLabel" Foreground="Red"/>
        </StackPanel>
        
    </Grid>
</Page>
