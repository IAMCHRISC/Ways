<Page x:Class="ways.NameChoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ways"
        mc:Ignorable="d"
        Title="Choix du nom de joueur" Height="450" Width="800">
    <Grid>
        <Label Content="Veuillez choisir un nom de joueur :" HorizontalAlignment="Center" Margin="0,163,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5"/>
        <TextBox x:Name="textBox_Name" HorizontalAlignment="Center" Margin="0,194,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="192"/>
        <Button Content="Valider" HorizontalAlignment="Center" Margin="0,226,0,0" VerticalAlignment="Top" Height="25" Width="192" Click="NavigateToQuestions"/>
        <Label Content="" HorizontalAlignment="Center" Margin="0,256,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" x:Name="validityLabel"/>
    </Grid>
</Page>
