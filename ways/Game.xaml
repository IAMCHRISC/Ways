        <TextBox x:Name="txt_cash" HorizontalAlignment="Left" Margin="124,305,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="500" FontSize="18"/>
        <Button x:Name="btn_valid_cash" Content="Valider" HorizontalAlignment="Left" Margin="624,305,0,0" VerticalAlignment="Top" Height="26" Width="46"/>
        <Button x:Name="btn_reponse1" Content="" HorizontalAlignment="Left" Margin="146,349,0,0" VerticalAlignment="Top" Height="46" Width="192" Background="White" FontSize="20"/>
        <Button x:Name="btn_reponse2" Content="" HorizontalAlignment="Left" Margin="454,349,0,0" VerticalAlignment="Top" Height="46" Width="194" Background="White" FontSize="20"/>
        <Button x:Name="btn_reponse3" Content="" HorizontalAlignment="Left" Margin="146,451,0,0" VerticalAlignment="Top" Height="46" Width="192" Background="White" FontSize="20"/>
        <Button x:Name="btn_reponse4" Content="" HorizontalAlignment="Left" Margin="454,451,0,0" VerticalAlignment="Top" Height="46" Width="193" Background="White" FontSize="20"/>

    </Grid>
