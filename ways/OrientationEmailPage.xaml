<Page x:Class="ways.OrientationEmailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ways"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrientationEmailPage" Background="White">

    <Grid>
        <Label Content="Envoyer les résultats" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Veuillez renseigner votre adresse email : *" HorizontalAlignment="Center"/>
            <TextBox x:Name="emailField" Margin="0,10,0,0"/>
            <Button Content="Envoyer" Margin="0,10,0,0" Click="SendResults"/>
            <Label x:Name="errorMessageLabel" Content="Merci de renseigner une adresse email valide." FontSize="9" Foreground="Red" HorizontalAlignment="Center" Visibility="Hidden"/>
        </StackPanel>

        <Label Content="* L'adresse email renseignée ne sera pas stockée en base de données." FontSize="7" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20"/>
    </Grid>
</Page>
